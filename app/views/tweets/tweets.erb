<h1>Welcome, <%= current_user.username %> </h1>
<p>
  Here's the latest:
</p>
<% @tweets.each do |tweet| %>
<div class="tweet">
  <div class="username">
    <a href="/users/<%= tweet.user.slug %>">@<%= tweet.user.username %></a>
  </div>
  <div class="tweet-text">
      <a href="/tweets/<%= tweet.id %>"><%= tweet.content %></a>
  </div>
</div>
<% end %>
